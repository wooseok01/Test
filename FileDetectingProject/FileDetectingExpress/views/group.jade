html
  head
    title loginPage
    link(rel="stylesheet", href="style/normalize.css")
    link(rel="stylesheet", href="style/group.css")

body
  div#header
    input(type="button", value="그룹 생성")#addGroup
    input(type="button", value="개인 서버로")#goToPrivate
  
  div#groupList
    - if(groupList)
      - for (var key in groupList)
        div.group
          img(alt="dirImg", src="../public/images.jpeg")
          a(href="/selectGroup?#{groupList[key]}") #{groupList[key]}

  form(action="/addGroup", method="post")#diBox
    input(type="text", placeholder="그룹명을 입력하세요.", id="groupName")
    br
    input(type="submit", value="Create")
          
  script(type="text/javascript", src="https://cdnjs.cloudflare.com/ajax/libs/jquery/1.11.3/jquery.min.js")
  script(type="text/javascript", src="js/groupScript.js")
  script(type="text/javascript", src="js/groupDirInterface.js")